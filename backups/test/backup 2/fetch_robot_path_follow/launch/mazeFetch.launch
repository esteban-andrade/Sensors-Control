<launch>

  <env name="GAZEBO_MODEL_PATH" value="$(find fetch_gazebo)/models:$(optenv GAZEBO_MODEL_PATH)" />

  <arg name="robot" default="fetch"/>
  <arg name="debug" default="false"/>
  <arg name="gui" default="true"/>
  <arg name="headless" default="false"/>

  <!-- Change robot to teleop -->
  <arg name="teleop_topic" default="/robot1/cmd_vel"/>  

  <!-- Start Gazebo with a blank world -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="debug" value="$(arg debug)" />
    <arg name="gui" value="$(arg gui)" />
    <arg name="paused" value="false"/>
    <arg name="use_sim_time" value="true"/>
    <arg name="headless" value="$(arg headless)"/>
    <arg name="world_name" value="$(find fetch_robot_path_follow)/worlds/maze3.sdf"/>
  </include>

  <!-- Launch Fetch Robot -->
  <include file="$(find fetch_robot_path_follow)/launch/include/$(arg robot).launch.xml" />
  
  <!-- Launch turtlebot as robot1 -->
  <group ns="robot1">
  	<arg name="model" default="$(env TURTLEBOT3_MODEL)" doc="model type [burger, waffle, waffle_pi]"/>
    <arg name="x_pos" default="1.0"/>
    <arg name="y_pos" default="1.0"/>
    <arg name="z_pos" default="0.0"/>

    <param name="robot_description" command="$(find xacro)/xacro --inorder $(find turtlebot3_description)/urdf/turtlebot3_$(arg model).urdf.xacro" />
    <node pkg="gazebo_ros" type="spawn_model" name="spawn_urdf" args="-urdf -model turtlebot3_$(arg model) -x $(arg x_pos) -y $(arg y_pos) -z $(arg z_pos) -param robot_description" />
  </group>

  <!-- Start DS4 teleop -->
  <node pkg="joy" type="joy_node" name="joy_node"/>
  <node name="teleop" pkg="fetch_robot_path_follow" type="fetch_robot_path_follow-teleop" args="-d $(find fetch_robot_path_follow)" output="screen" respawn="true">
      <remap from="/cmd_vel" to="$(arg teleop_topic)"/>
  </node>
</launch>
